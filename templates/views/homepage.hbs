<!DOCTYPE html>
<html>
  <head>
    <title>Side-Opening Navbar</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      .navbar {
        display: flex;
       
        align-items: center;
        background-color:#0a385a;
        color: #fff;
        padding: 24px;
      }

      .navbar-brand {
        display: flex;
        align-items: center;
        color: #fff;
        text-decoration: none;
        font-size: 1.5rem;
      }

      .navbar-brand img {
        width: 50px;
        margin-right: 10px;
      }

      .navbar-toggle {
        background-color: transparent;
        border: none;
        cursor: pointer;
        font-size: 1.5rem;
        color: #fff;
        padding: 0;
        margin: 0;
      }

      .navbar-toggle:focus {
        outline: none;
      }

      .navbar-toggle-icon {
        display: block;
        width: 30px;
        height: 2px;
        background-color: #fff;
        margin: 5px 0;
      }
	  #navbar-nav {
  /* ... */
  transition: transform 0.3s ease;
}

#navbar-nav.active {
  transform: translateX(0%);
}
#navbar-nav {
  left: 0;
}
.navbar-toggle {
  width: 6%%;
}


      #navbar-nav {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 74px;
        left: -22%;
        width: 15%;
		height: 20px;
        height: calc(100vh - 52px);
        background-color: #0a385a;
        transition: all 0.3s ease;
      }

      #navbar-nav.active {
        left: 0;
      }

      .nav-item {
        list-style: none;
        margin: 10px 0;
      }

      .nav-link {
        display: block;
        text-align: center;
        text-decoration: none;
        color: #fff;
        font-size: 1.2rem;
        padding: 10px;
        width: 100%;
      }

      .nav-link:hover {
        background-color: #444;
      }
	  #menu-bar{
		width: 30px;
		height: 30px;
	  }
    </style>
  </head>
  <body>
    <nav class="navbar">
      <a class="navbar-brand" href="#">
        My Website
      </a>
	  <div class="logo">
		 <img id="menu-bar"src="/images/list.png" alt="Logo">
	  </div>
      <button class="navbar-toggle" id="navbar-toggle">
       <img id="menu-bar"src="/images/list.png" alt="Logo">
      </button>
      <ul class="navbar-nav" id="navbar-nav">
        
		<li class="nav-item">  <img src="your-image-url-here" alt="Logo"></li>
        <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="#">About</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Services</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
      </ul>
    </nav>

    <script>
      const navbarToggle = document.getElementById("navbar-toggle");
      const navbarNav = document.getElementById("navbar-nav");

      navbarToggle.addEventListener("click", () => {
        navbarNav.classList.toggle("active");
      });
    </script>
  </body>
</html>
